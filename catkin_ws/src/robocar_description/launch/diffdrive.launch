<launch>
  <arg name="model" default="$(find robocar_description)/urdf/robocar.urdf"/>
  <arg name="rvizconfig" default="$(find robocar_description)/rviz/urdf.rviz" />

  <include file="$(find robocar_description)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <!-- <rosparam command="load"
            file="$(find robocar_description)/config/joints.yaml"
            ns="robocar_joint_state_controller" /> -->

  <rosparam command="load"
            file="$(find robocar_description)/config/diffdrive.yaml"
            ns="robocar_diff_drive_controller" />

  <node name="robocar_controller_spawner" pkg="controller_manager" type="spawner"
    args="robocar_diff_drive_controller
          --shutdown-timeout 3"/>

  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/robocar_diff_drive_controller/cmd_vel"/>
  </node>
</launch>
